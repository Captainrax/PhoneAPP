<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhoneApp.Views.MainPage">
  
        <StackLayout Spacing="0">
            <Frame BackgroundColor="#2196F3" Padding="10,0" CornerRadius="0">
                <Label BackgroundColor="{StaticResource SecondaryColor}"  Text="Welcome to!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36" FontAttributes="bold"/>
            </Frame>
            <Label Text="develop now" FontSize="Title" Padding="30,10,30,10" FontAttributes="bold" HorizontalTextAlignment="Center"/>
            <Label Text="Make changes" FontSize="16" Padding="30,0,30,0" FontAttributes="bold" HorizontalTextAlignment="Center"/>
            <Label FontSize="16" Padding="30,10,30,10" HorizontalTextAlignment="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <FormattedString.Spans>
                            <Span Text="Learn more!" FontAttributes="bold" />
                        </FormattedString.Spans>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Button Margin="10,50,10,0" Text="Click Me" Clicked="Button_Clicked" x:Name="CounterButton"/>
        </StackLayout>

</ContentPage>
